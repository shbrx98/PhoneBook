@model PhoneBook.Application.DTOs.ContactDto
@{
    ViewData["Title"] = "جزئیات مخاطب";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-circle"></i> جزئیات مخاطب</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-right"></i> بازگشت به لیست
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 text-center">
                @if (Model.HasImage)
                {
                    <img src="@Url.Action("GetImage", new { id = Model.Id })" 
                         class="contact-image-large mb-3" alt="@Model.FullName" />
                }
                else
                {
                    <div class="contact-image-large bg-secondary d-flex align-items-center justify-content-center text-white mx-auto mb-3">
                        <i class="bi bi-person-fill" style="font-size: 80px;"></i>
                    </div>
                }
            </div>
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-3">نام:</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">شماره موبایل:</dt>
                    <dd class="col-sm-9" dir="ltr" style="text-align: right;">@Model.MobileNumber</dd>

                    <dt class="col-sm-3">تاریخ تولد:</dt>
                    <dd class="col-sm-9">@(Model.BirthDatePersian ?? "-")</dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> ویرایش
                    </a>
                    <button type="button" class="btn btn-danger" 
                            onclick="confirmDelete(@Model.Id, '@Model.FullName')">
                        <i class="bi bi-trash"></i> حذف
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm('آیا از حذف "' + name + '" اطمینان دارید؟')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}