@model PhoneBook.Application.DTOs.CreateContactDto
@{
    ViewData["Title"] = "مخاطب جدید";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-plus-fill"></i> مخاطب جدید</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-right"></i> بازگشت به لیست
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="contactForm">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">نام و نام خانوادگی *</label>
                <input asp-for="FullName" class="form-control" placeholder="مثال: علی احمدی" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MobileNumber" class="form-label">شماره موبایل *</label>
                <input asp-for="MobileNumber" class="form-control" placeholder="09123456789" 
                       maxlength="11" dir="ltr" style="text-align: right;" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                <small class="form-text text-muted">باید 11 رقم و با 09 شروع شود</small>
            </div>

            <div class="mb-3">
                <label class="form-label">تاریخ تولد (شمسی)</label>
                <input type="text" id="persianBirthDate" class="form-control" 
                       placeholder="مثال: 1370/05/15" autocomplete="off" readonly />
                <input asp-for="BirthDate" type="hidden" id="gregorianBirthDate" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
                <small class="form-text text-muted">اختیاری - با کلیک تاریخ را از تقویم انتخاب کنید</small>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">تصویر</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" 
                       id="imageInput" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <small class="form-text text-muted">فرمت‌های مجاز: JPG, PNG, GIF (حداکثر 5MB)</small>
                
                <div id="imagePreview" class="mt-2" style="display:none;">
                    <img id="preview" src="" alt="پیش‌نمایش" class="img-thumbnail" style="max-width: 200px;" />
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> ذخیره
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> انصراف
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function () {

            // Initialize Persian date picker
            $('#persianBirthDate').pDatepicker({
                initialValue: false,
                format: 'YYYY/MM/DD',
                autoClose: true,
                observer: true,
                calendar: {
                    persian: {
                        locale: 'fa'
                    }
                },
                maxDate: new Date(), 
                onSelect: function (unix) {
                    
                    // Convert to Gregorian date
                    var gregorianDate = new Date(unix);
                    
                    // Set time to midnight to avoid timezone issues
                    gregorianDate.setUTCHours(0, 0, 0, 0);
                    
                    // Format the date as YYYY-MM-DD
                    var year = gregorianDate.getUTCFullYear();
                    var month = String(gregorianDate.getUTCMonth() + 1).padStart(2, '0');
                    var day = String(gregorianDate.getUTCDate()).padStart(2, '0');
                    
                    var formattedDate = year + '-' + month + '-' + day;
                    
                    
                    $('#gregorianBirthDate').val(formattedDate);
                    
                   
                }
            });

            //  Preview and validate image
            $('#imageInput').on('change', function () {
                console.log('=== 🖼️ فایل انتخاب شد ===');
                
                var input = this;
                if (input.files && input.files[0]) {
                    var file = input.files[0];
                    var fileSize = file.size / 1024 / 1024; // MB
                    
                    
                    
                    // Validate file size (max 5MB)
                    if (fileSize > 5) {
                        alert('حجم فایل نباید بیشتر از 5 مگابایت باشد');
                        $(this).val('');
                        $('#imagePreview').hide();
                        return;
                    }
                    
                    // File type validation
                    var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                    if (!allowedTypes.includes(file.type)) {
                        alert('فرمت فایل باید JPG, PNG یا GIF باشد');
                        $(this).val('');
                        $('#imagePreview').hide();
                        return;
                    }
                    
                    // Preview the image
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#preview').attr('src', e.target.result);
                        $('#imagePreview').show();
                        console.log('✅ پیش‌نمایش نمایش داده شد');
                    };
                    reader.readAsDataURL(file);
                }
            });

            
            $('#contactForm').on('submit', function(e) {
                
                var fullName = $('#FullName').val().trim();
                var mobileNumber = $('#MobileNumber').val().trim();
                var persianDate = $('#persianBirthDate').val();
                var gregorianDate = $('#gregorianBirthDate').val();
                var hasImage = $('#imageInput').get(0).files.length > 0;
                
                
                
                if (!fullName) {
                    alert('لطفاً نام را وارد کنید');
                    e.preventDefault();
                    return false;
                }
                
                if (!mobileNumber) {
                    alert('لطفاً شماره موبایل را وارد کنید');
                    e.preventDefault();
                    return false;
                }
                
                
                if (persianDate && !gregorianDate) {
                    alert('لطفاً تاریخ را مجدداً از تقویم انتخاب کنید');
                    e.preventDefault();
                    console.log('❌ خطا: تاریخ تبدیل نشده');
                    return false;
                }
                
                console.log('✅ فرم معتبر است - در حال ارسال...');
                return true;
            });

            
            @if (ViewBag.PersianBirthDate != null)
            {
                <text>
                var savedDate = '@ViewBag.PersianBirthDate';
                $('#persianBirthDate').val(savedDate);
                </text>
            }
        });
    </script>
}