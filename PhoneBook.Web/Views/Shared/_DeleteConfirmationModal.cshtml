<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    تأیید حذف
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">آیا از حذف "<span id="contactName"></span>" اطمینان دارید؟</p>
                <p class="text-muted mt-2 mb-0"><small>این عملیات قابل بازگشت نیست.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> انصراف
                </button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> حذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(contactId, contactName) {
        document.getElementById('contactName').textContent = contactName;
        var form = document.getElementById('deleteForm');
        form.action = '/Contacts/Delete/' + contactId;
        
        var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>