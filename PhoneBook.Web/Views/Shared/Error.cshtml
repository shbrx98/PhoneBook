@model ErrorViewModel
@{
    ViewData["Title"] = "خطا";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        خطا رخ داده است
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <strong>@Model.ErrorMessage</strong>
                        </div>
                    }
                    else
                    {
                        <p>متأسفانه خطایی رخ داده است. لطفاً دوباره تلاش کنید.</p>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mt-3">
                            <small>شناسه درخواست: <code>@Model.RequestId</code></small>
                        </p>
                    }

                    <div class="mt-4">
                        <a asp-controller="Contacts" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> بازگشت به صفحه اصلی
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>